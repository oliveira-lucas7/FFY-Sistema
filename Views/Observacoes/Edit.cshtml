@model FindForYou.Models.Observacoes

@{
    ViewData["Title"] = "Edit";
}

<h1 class="my-4">Editar</h1>

<div class="create-form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ObservacoesId" />
            <div class="form-group">
                <label asp-for="ObservacoesDescricao" class="control-label"></label>
                <input asp-for="ObservacoesDescricao" class="form-control" />
                <span asp-validation-for="ObservacoesDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObservacoesLocal" class="control-label"></label>
                <input asp-for="ObservacoesLocal" class="form-control" />
                <span asp-validation-for="ObservacoesLocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObservacoesData" class="control-label"></label>
                <input asp-for="ObservacoesData" class="form-control" />
                <span asp-validation-for="ObservacoesData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObjetoId" class="control-label"></label>
                <select asp-for="ObjetoId" class="form-control" asp-items="ViewBag.ObjetoId"></select>
                <span asp-validation-for="ObjetoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-block" />
            </div>
        </form>
</div>

<div class="back-to-list">
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
