@model FindForYou.Models.Objeto

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Detalhes</h1>

<div class="details-container">
    <h4 class="text-center">Objeto</h4>
    <hr />
    <div class="table-responsive">
        <table class="table table-bordered details-table">
            <tbody>
                <tr>
                    <th>Nome:</th>
                    <td>@Html.DisplayFor(model => model.ObjetoNome)</td>
                </tr>
                <tr>
                    <th>Cor:</th>
                    <td>@Html.DisplayFor(model => model.ObjetoCor)</td>
                </tr>
                <tr>
                    <th>Observação:</th>
                    <td>@Html.DisplayFor(model => model.ObjetoObservacao)</td>
                </tr>
                <tr>
                    <th>Local de Desaparecimento:</th>
                    <td>@Html.DisplayFor(model => model.ObjetoLocalDesaparecimento)</td>
                </tr>
                <tr>
                    <th>Foto:</th>
                    <td>@Html.DisplayFor(model => model.ObjetoFoto)</td>
                </tr>
                <tr>
                    <th>Data de Desaparecimento:</th>
                    <td>@Html.DisplayFor(model => model.ObjetoDtDesaparecimento)</td>
                </tr>
                <tr>
                    <th>Data de Encontro:</th>
                    <td>@Html.DisplayFor(model => model.ObjetoDtEncontro)</td>
                </tr>
                <tr>
                    <th>Status:</th>
                    <td>@Html.DisplayFor(model => model.ObjetoStatus)</td>
                </tr>
                <tr>
                    <th>Usuário:</th>
                    <td>@Html.DisplayFor(model => model.Usuario.UsuarioNome)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.ObjetoId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar para lista</a>
</div>
