@model IEnumerable<FindForYou.Models.Objeto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-4">Lista de Objetos</h1>

<div class="mb-3">
    <a class="btn btn-primary create-btn" asp-action="Create">Criar Novo</a>
</div>

<div class="custom-table-wrapper">
    <table class="table custom-table">
        <thead class="thead-dark custom-thead">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ObjetoNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObjetoCor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObjetoObservacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObjetoLocalDesaparecimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObjetoFoto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObjetoDtDesaparecimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObjetoDtEncontro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObjetoStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario.UsuarioNome)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjetoNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjetoCor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjetoObservacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjetoLocalDesaparecimento)
                    </td>
                    <td class="image-cell">
                        @Html.DisplayFor(modelItem => item.ObjetoFoto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjetoDtDesaparecimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjetoDtEncontro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjetoStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.UsuarioNome)
                    </td>
                    <td class="custom-table-actions">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ObjetoId">Editar</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ObjetoId">Detalhes</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ObjetoId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
